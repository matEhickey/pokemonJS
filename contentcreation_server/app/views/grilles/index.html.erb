<p id="notice"><%= notice %></p>

<h1>Grilles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grilles.each do |grille| %>
      <tr>
        <td><%= grille.name %></td>
        <td><%= grille.image %></td>
        <td><%= link_to 'Show', grille %></td>
        <td><%= link_to 'Edit', edit_grille_path(grille) %></td>
        <td><%= link_to 'Destroy', grille, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grille', new_grille_path %>
