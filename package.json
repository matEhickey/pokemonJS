  "scripts": {
    "start": "yarn build && node_modules/.bin/webpack-dev-server --open",
    "test": "echo TEST",
    "copy_index": "cp src/index.html dist/index.html",
    "clean": "rm -r dist || true",
    "build": "yarn clean && ./node_modules/webpack-cli/bin/cli.js --mode development --devtool source-map  && yarn copy_index",
