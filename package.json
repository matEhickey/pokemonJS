{
  "name": "PokemonJS",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "start": "yarn build && webpack-dev-server --open",
    "test": "jest",
    "copy_index": "cp src/index.html dist/index.html",
    "clean": "rm -r dist || true",
    "build": "yarn clean && webpack --mode development --devtool source-map  && yarn copy_index",
    "buildProd": "(rm -r docs || true) && yarn clean && webpack --mode production --optimize-minimize && yarn copy_index && cp -r dist docs"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^3.7.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "^3.0.1",
    "flow-bin": "^0.98.0",
    "flow-typed": "^2.5.1",
    "jest": "^24.8.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {}
}
